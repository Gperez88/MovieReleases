<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_thumbnail"
        android:layout_width="@dimen/list_item_thumbnail_layout_width"
        android:layout_height="@dimen/list_item_thumbnail_layout_height"
        android:src="@drawable/default_image"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:padding="@dimen/small_padding">

        <TextView
            android:id="@+id/list_item_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MovieReleaseTheme.SubheadText"
            android:text="Title"
            android:singleLine="true" />

        <TextView
            android:id="@+id/list_item_release_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MovieReleaseTheme.Body1Text"
            android:text="August 2014" />

    </LinearLayout>

</LinearLayout>