<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_selector"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/list_item_thumbnail"
        android:layout_width="@dimen/list_item_thumbnail_layout_width"
        android:layout_height="@dimen/list_item_thumbnail_layout_height"
        fresco:placeholderImage="@color/primary"
        fresco:progressBarImage="@mipmap/ic_sync"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:actualImageScaleType="fitXY" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:padding="@dimen/small_padding">

        <TextView
            android:id="@+id/list_item_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MovieReleaseTheme.SubheadText"
            android:singleLine="true" />

        <TextView
            android:id="@+id/list_item_release_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MovieReleaseTheme.Body1Text" />

    </LinearLayout>

</LinearLayout>