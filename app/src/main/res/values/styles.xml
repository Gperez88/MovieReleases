<resources>

    <!-- Base application theme. -->
    <style name="MovieReleaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MovieReleaseTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MovieReleaseTheme.Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- style text -->
    <style name="MovieReleaseTheme.PrimaryText" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/primary_text</item>
    </style>
    
    <style name="MovieReleaseTheme.SecondaryText" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
